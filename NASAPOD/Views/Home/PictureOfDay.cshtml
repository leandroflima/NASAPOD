@model NASAPOD.Models.PictureOfDay


@{
    ViewData["Title"] = "NASA Picture of Day";
}


<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Explanation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Explanation)
        </dd>
        <dt class="col-sm-2">Media</dt>
        @if (Model.Media_type == "image")
        {
            <dd class="col-sm-10">
                <img src="@Url.Content(Model.Url)" alt="IMAGES" />
            </dd>
        }
        else
        {
            <dd class="col-sm-10">
                <iframe width="560"
                        height="315"
                        src="@Url.Content(Model.Url)"
                        frameborder="0"
                        allowfullscreen></iframe>
            </dd>
        }
    </dl>
</div>

<div>
    <a asp-action="Index">Back</a>
</div>
